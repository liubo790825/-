@{
    ViewBag.Title = "excel导入模板管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td style="padding-left: 2px;">
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="learun.reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
        <div class="btn-group">
            <a id="lr-enable" class="btn btn-default"><i class="fa fa-play"></i>&nbsp;启用</a>
            <a id="lr-disable" class="btn btn-default"><i class="fa fa-stop"></i>&nbsp;停用</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
<script>
    function getauthorizeMenuData(n) {
        if (!n) return "";
        var r = top.authorizeMenuData,
            e = r.length;
       for (var i = 0; i < e; i++) {
            if (r[i].ModuleId==n) {
                return r[i].FullName;
            }
        }
        return "";
    }

    function getBtnName(m,n)
    {
        if (!m) return "";
        if (!n) return "";
        var r = top.authorizeButtonData[m],
            e = r.length;
        for (var i = 0; i < e; i++) {
            if (r[i].ModuleButtonId == n) {
                return r[i].FullName;
            }
        }
        return "";
    }

    (function ($) {
        "use strict";

        var indexjs = {
            initialPage: function () {
                //resize重设(表格、树形)宽高
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        $('#gridTable').setGridWidth(($('.gridPanel').width()));
                        $("#gridTable").setGridHeight($(window).height() - 136.5);
                    }, 200);
                    e.stopPropagation();
                });
                indexjs.initialGrid();
                indexjs.bindEvent();
            },
            //初始化表格
            initialGrid: function () {
                var selectedRowIndex = 0;
                var $gridTable = $('#gridTable');
                $gridTable.jqGrid({
                    url: "../../SystemManage/ExcelImportTemplate/GetPageListJson",
                    datatype: "json",
                    height: $(window).height() - 136.5,
                    autowidth: true,
                    colModel: [
                        { label: '主键', name: 'F_ExcelImportTemplateId', hidden: true },
                        { label: '主键', name: 'F_ModuleId', hidden: true },
                        { label: '模板名称', name: 'F_Name', index: 'F_Name', width: 160, align: 'left' },
                        {
                            label: '绑定功能', name: 'F_ModuleId', index: 'F_ModuleId', width: 160, align: 'left',
                            formatter: function (cellvalue, options, rowObject) {                               
                                return top.learun.data.get(["menu", rowObject.F_ModuleId, "FullName"]);
                            }
                        },
                        {
                            label: '绑定按钮', name: 'F_ModuleBtnId', index: 'F_ModuleBtnId', width: 160, align: 'left',
                            formatter:  function (cellvalue, options, rowObject) {
                                return top.learun.data.get(["button", rowObject.F_ModuleId, function (v) { return v.ModuleButtonId == cellvalue }, "FullName"]);
                            }
                        },
                        {
                            label: "有效", name: "F_EnabledMark", index: "F_EnabledMark", width: 50, align: "center",
                            formatter: function (cellvalue, options, rowObject) {
                                return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                            }
                        },
                        {
                            label: '创建人', name: 'F_CreateUserName', index: 'F_CreateUserName', width: 130, align: 'left'

                        },
                        {
                            label: '创建时间', name: 'F_CreateDate', index: 'F_CreateDate', width: 130, align: 'left',
                            formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' }
                        }
                    ],
                    viewrecords: true,
                    rowNum: 30,
                    rowList: [30, 50, 100],
                    pager: "#gridPager",
                    sortname: 'F_CreateDate',
                    sortorder: 'desc',
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    onSelectRow: function () {
                        selectedRowIndex = $("#" + this.id).getGridParam('selrow');
                    },
                    gridComplete: function () {
                        $("#" + this.id).setSelection(selectedRowIndex, false);
                    }
                });
            },
            bindEvent: function () {
                $("#btn_Search").click(indexjs.event.search);
                $('#txt_Keyword').bind('keypress', function (event) {
                    if (event.keyCode == "13") {
                        $('#btn_Search').trigger("click");
                    }
                });
                $("#lr-add").click(indexjs.event.add);
                $("#lr-edit").click(indexjs.event.edit);
                $("#lr-delete").click(indexjs.event.deletebtn);

                $("#lr-enable").click(indexjs.event.enable);
                $("#lr-disable").click(indexjs.event.disable);
            },
            event: {
                //查询事件
                search: function () {
                    var queryJson = {
                        Keyword: $("#txt_Keyword").val()
                    }
                    $('#gridTable').jqGrid('setGridParam', {
                        postData: { queryJson: JSON.stringify(queryJson) },
                        page: 1
                    }).trigger('reloadGrid');
                },
                //新增
                add: function () {
                    dialogOpen({
                        id: "Form",
                        title: '添加导入模板',
                        url: '/SystemManage/ExcelImportTemplate/Form',
                        width: "1100px",
                        height: "700px",
                        btn:null,
                        callBack: function (iframeId) {
                            top.frames[iframeId].AcceptClick();
                        }
                    });
                },
                //编辑
                edit: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("F_ExcelImportTemplateId");
                    if (checkedRow(keyValue)) {
                        dialogOpen({
                            id: "Form",
                            title: '修改导入模板',
                            url: '/SystemManage/ExcelImportTemplate/Form?keyValue=' + keyValue,
                            width: "1100px",
                            height: "700px",
                            btn: null,
                            callBack: function (iframeId) {
                                top.frames[iframeId].AcceptClick();
                            }
                        });
                    }
                },
                //删除
                deletebtn: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("F_ExcelImportTemplateId");
                    if (keyValue) {
                        $.RemoveForm({
                            url: "../../SystemManage/ExcelImportTemplate/RemoveForm",
                            param: { keyValue: keyValue },
                            success: function (data) {
                                $("#gridTable").trigger("reloadGrid");
                            }
                        })
                    } else {
                        dialogMsg('请选择需要删除的导入模板！', 0);
                    }
                },
                enable: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("F_ExcelImportTemplateId");
                    if (keyValue) {
                        $.ConfirmAjax({
                            msg: "请确认是否要【启用】导入模板？",
                            url: "../../SystemManage/ExcelImportTemplate/UpdateForm?keyValue=" + keyValue,
                            param: { keyValue: keyValue, F_EnabledMark: 1 },
                            success: function (data) {
                                $("#gridTable").trigger("reloadGrid");
                            }
                        });
                    } else {
                        dialogMsg('请选择要启用的导入模板！', 0);
                    }
                },
                disable: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("F_ExcelImportTemplateId");
                    if (keyValue) {
                        $.ConfirmAjax({
                            msg: "请确认是否要【停用】导入模板？",
                            url: "../../SystemManage/ExcelImportTemplate/UpdateForm?keyValue=" + keyValue,
                            param: { F_EnabledMark: 0 },
                            success: function (data) {
                                $("#gridTable").trigger("reloadGrid");
                            }
                        });
                    } else {
                        dialogMsg('请选择要停用的导入模板！', 0);
                    }
                }
            }
        }

        $(function () {
            indexjs.initialPage();
        });

    })(window.jQuery);
</script>
