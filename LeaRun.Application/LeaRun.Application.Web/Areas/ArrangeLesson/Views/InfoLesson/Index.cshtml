@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../ArrangeLesson/InfoLesson/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '编号', name: 'LessonId', index: 'LessonId', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '课程号', name: 'LessonNo', index: 'LessonNo', width: 100, align: 'left',sortable: true  },
                { label: '课程名称', name: 'LessonName', index: 'LessonName', width: 150, align: 'left',sortable: true  },
                { label: '学分', name: 'Xuefen', index: 'Xuefen', width: 100, align: 'left',sortable: true  },
                { label: '简称', name: 'ShortName', index: 'ShortName', width: 100, align: 'left',sortable: true  },
                { label: '状态', name: 'Status', index: 'Status', width: 80, align: 'left',sortable: true  },
                { label: '课程类型', name: 'LessonType', index: 'LessonType', width: 100, align: 'left',sortable: true  },
                { label: '考核类型', name: 'TestType', index: 'TestType', width: 100, align: 'left',sortable: true  },
                { label: '是否连上', name: 'IsContinuity', index: 'IsContinuity', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '每天最大节数', name: 'MaxPerDay', index: 'MaxPerDay', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '理论学时', name: 'TheoryHours', index: 'TheoryHours', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '实践学时', name: 'PracticeHourse', index: 'PracticeHourse', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '周学时', name: 'WeekHours', index: 'WeekHours', width: 100, align: 'left',sortable: true ,hidden: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'LessonId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加InfoLesson',
            url: '/ArrangeLesson/InfoLesson/Form',
            width: '700px',
            height: '500px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue( 'LessonId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑InfoLesson',
                url: '/ArrangeLesson/InfoLesson/Form?keyValue=' + keyValue,
                width: '700px',
                height: '500px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue( 'LessonId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../ArrangeLesson/InfoLesson/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的InfoLesson！', 0);
        }
    }
    //详细
    function btn_detail() {
        var keyValue = $('#gridTable').jqGridRowValue( 'LessonId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Detail',
                title: 'InfoLesson',
                url: '/ArrangeLesson/InfoLesson/Form?keyValue=' + keyValue,
                width: '700px',
                height: '500px',
                btn:null
                });
        }
    }
    //* 根据需要启用
    //导出
    function btn_export() {
        dialogOpen({
        id: 'ExcelIExportDialog',
        title: '导出InfoLesson数据',
        url: '/Utility/ExcelExportForm?gridId=gridTable&filename=InfoLesson',
        width: '700px',
        height: '500px',
        callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }, btn: ['导出Excel', '关闭']
            })
    }
    //查询条件
    $("#queryCondition .dropdown-menu li").click(function() {
        var text = $(this).find('a').html();
        var value = $(this).find('a').attr('data-value');
        $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
     });
    //查询事件
    $("#btn_Search").click(function() {
        var queryJson = {
             condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
             keyword: $("#txt_Keyword").val()
        }
        $gridTable.jqGrid('setGridParam', {
             postData: { queryJson: JSON.stringify(queryJson) }, page: 1
        }).trigger('reloadGrid');
     });
    //查询回车
    $('#txt_Keyword').bind('keypress', function (event) {
        if (event.keyCode == "13") {
             $('#btn_Search').trigger("click");
        }
     });
    //打印
    function btn_print(){
        $("#gridPanel").printTable();
     }
    //根据需要启用*/
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
            <!--参考例子在此做灵活的查询-->                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
            <a id="lr-print" class="btn btn-default" onclick="btn_print()"><i class="fa fa-print"></i>&nbsp;打印</a>
            <a id="lr-export" class="btn btn-default" onclick="btn_export()"><i class="fa fa-sign-out"></i>&nbsp;导出</a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
