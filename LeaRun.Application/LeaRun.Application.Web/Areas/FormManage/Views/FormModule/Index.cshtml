@{
    ViewBag.Title = "表单设计管理";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">表单类别</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">表单管理</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            <td>
                                <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                            </td>
                            <td style="padding-left: 5px;">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="learun.reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                        <a id="lr-add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="lr-edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="lr-delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="lr-more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-reorder"></i>&nbsp;更多<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right" aria-labelledby="lr-more">
                            <li id="lr-preview"><a><i></i>&nbsp;预览表单</a></li>
                            <li id="lr-enabled"><a><i></i>&nbsp;启用表单</a></li>
                            <li id="lr-disabled"><a><i></i>&nbsp;停用表单</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>
<script>
    (function ($) {
        var indexJs = {
            initialPage: function () {
                //layout布局
                $('#layout').layout({
                    applyDemoStyles: true,
                    onresize: function () {
                        $(window).resize();
                    }
                });
                //resize重设(表格、树形)宽高
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        $('#gridTable').setGridWidth(($('.gridPanel').width()));
                        $("#gridTable").setGridHeight($(window).height() - 169.5);
                        $("#itemTree").setTreeHeight($(window).height() - 52);
                    }, 200);
                    e.stopPropagation();
                });
            },
            initialTree: function () {
                var item = {
                    height: $(window).height() - 52,
                    param: { EnCode: "FormSort" },
                    url: "../../SystemManage/DataItemDetail/GetDataItemTreeJson",
                    onnodeclick: function (item) {
                        var queryJson = { FrmCategory: item.id };
                        indexJs.event.search(queryJson);
                    }
                };
                //初始化
                $("#itemTree").treeview(item);
            },
            initialGrid: function () {
                var selectedRowIndex = 0;
                $("#gridTable").jqGrid({
                    url: "../../FormManage/FormModule/GetPageListJson",
                    datatype: "json",
                    height: $(window).height() - 169.5,
                    autowidth: true,
                    colModel: [
                        { label: '主键', name: 'FrmId', hidden: true },
                        { label: '数据库Id', name: 'FrmDbId', hidden: true },
                        { label: '表单编号', name: 'FrmCode', index: 'FrmCode', width: 100, align: 'left' },
                        { label: '表单名称', name: 'FrmName', index: 'FrmName', width: 120, align: 'left' },
                        {
                            label: '分类', name: 'FrmCategory', index: 'FrmCategory', width: 100, align: 'center',
                            formatter: function (cellvalue, options, rowObject) {
                                return top.learun.data.get(["dataItem", "FormSort", cellvalue]);
                            }
                        },
                        {
                            label: "表单类型", name: "FrmType", index: "FrmType", width: 120, align: "center",
                            formatter: function (cellvalue, options, rowObject) {
                                if (cellvalue == 0) {
                                    return '<span  class=\"label label-primary\">自定义表单</span>';
                                } else if (cellvalue == 1) {
                                    return '<span  class=\"label label-warning\">自定义表单(建表)</span>';
                                } else {
                                    return '<span  class=\"label label-danger\">系统表单</span>';
                                }
                            }
                        },
                        { label: '版本号', name: 'Version', index: 'Version', width: 160, align: "left" },
                        { label: '状态Id', name: 'EnabledMark', index: 'EnabledMark', hidden: true },
                        {
                            label: "状态", name: "enabledmarklabl", index: "enabledmarklabl", width: 60, align: "center",
                            formatter: function (cellvalue, options, rowObject) {
                                if (rowObject.EnabledMark == 1) {
                                    return '<span  class=\"label label-success\">启用</span>';
                                } else if (rowObject.EnabledMark == 0) {
                                    return '<span  class=\"label label-danger\">停用</span>';
                                } else if (rowObject.EnabledMark == 3) {
                                    return '<span  class=\"label label-info\">草稿</span>';
                                } else {
                                    return '';
                                }
                            }
                        },
                        { label: "创建用户", name: "CreateUserName", index: "CreateUserName", width: 100, align: "left" },
                        {
                            label: "创建时间", name: "CreateDate", index: "CreateDate", width: 150, align: "left",
                            formatter: function (cellvalue, options, rowObject) {
                                return formatDate(cellvalue, 'yyyy-MM-dd hh:mm:ss');
                            }
                        },
                        { label: "备注", name: "Description", index: "Description", width: 200, align: "left" }
                    ],
                    viewrecords: true,
                    rowNum: 30,
                    rowList: [30, 50, 100],
                    pager: "#gridPager",
                    sortname: 'CreateDate desc',
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    onSelectRow: function () {
                        selectedRowIndex = $("#" + this.id).getGridParam('selrow');
                    },
                    gridComplete: function () {
                        $("#" + this.id).setSelection(selectedRowIndex, false);
                    }
                });
            },
            bindEvent: function () {
                //查询事件
                $("#btn_Search").click(function () {
                    var queryJson = { Keyword: $("#txt_Keyword").val() };
                    indexJs.event.search(queryJson);
                });
                //新增
                $("#lr-add").click(indexJs.event.btnAdd);
                //编辑
                $("#lr-edit").click(indexJs.event.btnEdit);
                //编辑
                $("#lr-delete").click(indexJs.event.btnDelete);
                //预览
                $("#lr-preview").click(indexJs.event.btnPreview);
                //启用
                $("#lr-enabled").click(indexJs.event.btnEnable);
                //停用
                $("#lr-disabled").click(indexJs.event.btnDisable);
            },
            event: {
                search: function (queryJson) {
                    $("#gridTable").jqGrid('setGridParam', {
                        postData: { queryJson: JSON.stringify(queryJson) },
                    }).trigger('reloadGrid');
                },
                btnAdd: function () {
                    dialogOpen({
                        id: "FormBuider",
                        title: '新增表单',
                        url: '/FormManage/FormModule/FormBuider',
                        width: "1100px",
                        height: "700px",
                        btn: null,
                        callBack: function (iframeId) {
                            top.frames[iframeId].AcceptClick();
                        }
                    });
                },
                btnEdit: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("FrmId");
                    if (checkedRow(keyValue)) {
                        dialogOpen({
                            id: "FormBuider",
                            title: '修改表单',
                            url: '/FormManage/FormModule/FormBuider?keyValue=' + keyValue,
                            width: "1100px",
                            height: "700px",
                            btn: null,
                            callBack: function (iframeId) {
                                top.frames[iframeId].AcceptClick();
                            }
                        });
                    }
                },
                btnDelete: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("FrmId");
                    if (keyValue) {
                        learun.removeForm({
                            url: "/FormManage/FormModule/RemoveForm",
                            param: { keyValue: keyValue },
                            success: function (data) {
                                $("#gridTable").trigger("reloadGrid");
                            }
                        })
                    } else {
                        dialogMsg('请选择需要删除的表单模板！', 0);
                    }
                },
                btnPreview: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("FrmId");
                    var frmname = $("#gridTable").jqGridRowValue("FrmName");
                    if (keyValue) {
                        dialogOpen({
                            id: "FormPreview",
                            title: '表单预览【' + frmname + "】",
                            url: '/FormManage/FormModule/FormPreview?keyValue=' + keyValue,
                            width: "800px",
                            height: "550px",
                            callBack: function () {
                            }
                        });
                    }
                    else {
                        dialogMsg('请选择要设计的表单模板！', 0);
                    }
                },
                btnEnable: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("FrmId");
                    var enabledmark = $("#gridTable").jqGridRowValue("EnabledMark");
                    if (keyValue) {
                        if (enabledmark == 3) {
                            dialogMsg('草稿不能被启用！', 0);
                            return;
                        }
                        $.ConfirmAjax({
                            msg: "请确认是否要【启用】表单？",
                            url: "../../FormManage/FormModule/EnableOrDisableForm",
                            param: { keyValue: keyValue, flag: 1 },
                            success: function (data) {
                                $("#gridTable").trigger("reloadGrid");
                            }
                        })
                    } else {
                        dialogMsg('请选择要启用的表单模板！', 0);
                    }
                },
                btnDisable: function () {
                    var keyValue = $("#gridTable").jqGridRowValue("FrmId");
                    var enabledmark = $("#gridTable").jqGridRowValue("EnabledMark");
                    if (keyValue) {
                        if (enabledmark == 3) {
                            dialogMsg('草稿不能被禁用！', 0);
                            return;
                        }
                        $.ConfirmAjax({
                            msg: "请确认是否要【禁用】表单？",
                            url: "../../FormManage/FormModule/EnableOrDisableForm",
                            param: { keyValue: keyValue, flag: 0 },
                            success: function (data) {
                                $("#gridTable").trigger("reloadGrid");
                            }
                        })
                    } else {
                        dialogMsg('请选择要禁用的表单模板！', 0);
                    }

                }
            }
        };

        $(function () {
            indexJs.initialPage();
            indexJs.initialTree();
            indexJs.initialGrid();
            indexJs.bindEvent();
        });

    })(window.jQuery, window.learun);
</script>

