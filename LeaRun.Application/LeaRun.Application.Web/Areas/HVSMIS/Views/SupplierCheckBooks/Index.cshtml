@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 108.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../HVSMIS/SupplierCheckBooks/GetListJson",
            datatype: "json",
            colModel: [
                { label: 'ID', name: 'PlanId', index: 'PlanId', width: 100, align: 'left', sortable: true, hidden: true },
                { label: '系部', name: 'College', index: 'College', width: 100, align: 'left', sortable: true, hidden: true },
                { label: '专业', name: 'MajorName', index: 'MajorName', width: 120, align: 'left', sortable: true },
               { label: '班级名称', name: 'ClassName', index: 'ClassName', width: 100, align: 'left', sortable: true },
                { label: '人数', name: 'StuNum', index: 'StuNum', width: 60, align: 'left', sortable: true },

                 { label: '教材名', name: 'TeachBook', index: 'TeachBook', width: 160, align: 'left', sortable: true },
                  { label: '编书作者', name: 'Author', index: 'Author', width: 60, align: 'left', sortable: true },
                   { label: '出版社', name: 'PubCompany', index: 'PubCompany', width: 160, align: 'left', sortable: true },
                    { label: 'ISBN号', name: 'ISBN', index: 'ISBN', width: 160, align: 'left', sortable: true },
                     { label: '备注', name: 'remark', index: 'remark', width: 60, align: 'left', sortable: true }
            ],
            viewrecords: true,
            rowNum: 2000,
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            hidegrid: false,
            sortname: 'PlanId',
            sortorder: 'desc',
            grouping: true,
            groupingView: {
                groupField: ['TeachBook'],
                groupColumnShow: [true],
                groupText: ['<b>{0} - {1} Item(s)</b>'],
                groupCollapse: true,
                groupOrder: ['desc']
            },
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加SupplierCheckBooks',
            url: '/HVSMIS/SupplierCheckBooks/Form',
            width: '700px',
            height: '500px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue( 'EncourgeLevelNo');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑SupplierCheckBooks',
                url: '/HVSMIS/SupplierCheckBooks/Form?keyValue=' + keyValue,
                width: '700px',
                height: '500px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue( 'EncourgeLevelNo');
        if (keyValue) {
            $.RemoveForm({
                url: '../../HVSMIS/SupplierCheckBooks/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的SupplierCheckBooks！', 0);
        }
    }
    //详细
    function btn_detail() {
        var keyValue = $('#gridTable').jqGridRowValue( 'EncourgeLevelNo');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Detail',
                title: 'SupplierCheckBooks',
                url: '/HVSMIS/SupplierCheckBooks/Form?keyValue=' + keyValue,
                width: '700px',
                height: '500px',
                btn:null
                });
        }
    }
    //* 根据需要启用
    //导出
    function btn_export() {
        dialogOpen({
        id: 'ExcelIExportDialog',
        title: '导出SupplierCheckBooks数据',
        url: '/Utility/ExcelExportForm?gridId=gridTable&filename=SupplierCheckBooks',
        width: '700px',
        height: '500px',
        callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }, btn: ['导出Excel', '关闭']
            })
    }
    //查询条件
    $("#queryCondition .dropdown-menu li").click(function() {
        var text = $(this).find('a').html();
        var value = $(this).find('a').attr('data-value');
        $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
     });
    //查询事件
    $("#btn_Search").click(function() {
        var queryJson = {
             condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
             keyword: $("#txt_Keyword").val()
        }
        $gridTable.jqGrid('setGridParam', {
             postData: { queryJson: JSON.stringify(queryJson) }, page: 1
        }).trigger('reloadGrid');
     });
    //查询回车
    $('#txt_Keyword').bind('keypress', function (event) {
        if (event.keyCode == "13") {
             $('#btn_Search').trigger("click");
        }
     });
    //打印
    function btn_print(){
        $("#gridPanel").printTable();
     }
    //根据需要启用*/
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
             <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            @*<a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
            <a id="lr-print" class="btn btn-default" onclick="btn_print()"><i class="fa fa-print"></i>&nbsp;打印</a>
            <a id="lr-export" class="btn btn-default" onclick="btn_export()"><i class="fa fa-sign-out"></i>&nbsp;导出</a>*@
        </div>
        @*<script>$('.toolbar').authorizeButton()</script>*@
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
</div>
