@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../CollegeMIS/BK_DormBed/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                }
            })
        }
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        $.SaveForm({
            url: "../../CollegeMIS/BK_DormBed/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <td class="formTitle">宿舍ID号</td>
            <td class="formValue">
                <input id="DormId" type="text" class="form-control"  />
            </td>
            <td class="formTitle">楼层ID号</td>
            <td class="formValue">
                <input id="DormFloorsId" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">宿舍楼单元ID号</td>
            <td class="formValue">
                <input id="DormUnitId" type="text" class="form-control"  />
            </td>
            <td class="formTitle">宿舍楼ID号</td>
            <td class="formValue">
                <input id="DormBuildingId" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">床位名称</td>
            <td class="formValue">
                <input id="BedName" type="text" class="form-control"  />
            </td>
            <td class="formTitle">床位编号</td>
            <td class="formValue">
                <input id="BedNo" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">价格</td>
            <td class="formValue">
                <input id="BedPrice" type="text" class="form-control"  />
            
    </table>
</div>
